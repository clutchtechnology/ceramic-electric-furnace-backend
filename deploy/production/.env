# ============================================================
# 电炉后端 - 生产环境配置
# ============================================================

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8082

# 模式配置 (生产模式)
MOCK_MODE=false

# PLC 配置 (S7-1200)
PLC_IP=192.168.1.10
PLC_PORT=102
PLC_RACK=0
PLC_SLOT=1

# InfluxDB 配置 (Docker 运行)
INFLUX_URL=http://localhost:8089
INFLUX_TOKEN=furnace-token
INFLUX_ORG=furnace
INFLUX_BUCKET=sensor_data

# Modbus RTU 配置 (直接访问串口)
MODBUS_PORT=COM1
MODBUS_BAUDRATE=19200

# 轮询配置
ENABLE_POLLING=true
POLLING_INTERVAL=2
